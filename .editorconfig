root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{cpp,hpp,yml}]
indent_style = space
indent_size = 2
max_line_length = 79

[*.py]
indent_style = space
indent_size = 4
max_line_length = 79

[CMakeLists.txt]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
